<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecard.mapper.GoodsInfoMapper">

<!-- 新增一条tb_goods记录 -->
<insert id="insertGoodsInfo" parameterType="com.ecard.entity.GoodsInfoEntity">
insert into tb_goods(strGoodsId,strGoodsName,strGoodsTypeId,strGoodsTypeName,dEnterPrice,dSalePrice,iStock,strEmployeeId,strEmployeeName,strEmployeeLoginName,strInsertTime,strUpdateTime)
 values(#{strGoodsId},#{strGoodsName},#{strGoodsTypeId},#{strGoodsTypeName},#{dEnterPrice},#{dSalePrice},#{iStock},#{strEmployeeId},#{strEmployeeName},#{strEmployeeLoginName},#{strInsertTime},#{strUpdateTime})</insert>



<!-- 删除单条tb_goods记录 -->
<delete id="deleteGoodsInfoById" parameterType="string">
delete from tb_goods where strGoodsId=#{strGoodsId}
</delete>



<!-- 更新tb_goods记录 -->
<update id="updateGoodsInfo" parameterType="com.ecard.entity.GoodsInfoEntity">
update tb_goods set strGoodsName=#{strGoodsName},strGoodsTypeId=#{strGoodsTypeId},strGoodsTypeName=#{strGoodsTypeName},dEnterPrice=#{dEnterPrice},dSalePrice=#{dSalePrice},iStock=#{iStock},strEmployeeId=#{strEmployeeId},strEmployeeName=#{strEmployeeName},strEmployeeLoginName=#{strEmployeeLoginName},strInsertTime=#{strInsertTime},strUpdateTime=#{strUpdateTime}
 where strGoodsId=#{strGoodsId}
</update>



<!-- 获取单条记录 -->
<select id="getGoodsInfo" parameterType="string" resultType="com.ecard.entity.GoodsInfoEntity">
select strGoodsId,strGoodsName,strGoodsTypeId,strGoodsTypeName,dEnterPrice,dSalePrice,iStock,strEmployeeId,strEmployeeName,strEmployeeLoginName,strInsertTime,strUpdateTime from tb_goods
where strGoodsId=#{strGoodsId}
</select>



<!-- 分页获取记录 -->
<select id="getListGoodsInfo"  parameterType="map" resultType="com.ecard.entity.GoodsInfoEntity">
select strGoodsId,strGoodsName,strGoodsTypeId,strGoodsTypeName,dEnterPrice,dSalePrice,iStock,strEmployeeId,strEmployeeName,strEmployeeLoginName,strInsertTime,strUpdateTime from tb_goods 
limit #{pagFrom},#{pageSize}
</select>



<!-- 获取tb_goods总记录数 -->
<select id="getGoodsInfoTotalCount"  parameterType="map" resultType="int">
select count(strGoodsId) from tb_goods
</select>

 
 <!-- 获取tb_goods总记录数 -->
<select id="getGoodsInfoCountByGoodsType"  parameterType="string" resultType="int">
select count(strGoodsId) from tb_goods where strGoodsTypeId ＝ #{strGoodsTypeId}
</select>


</mapper>