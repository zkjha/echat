<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecard.mapper.CashierConfigMapper">

<!-- 新增一条计量记录 -->
<insert id="addMeasurementUnit" parameterType="com.ecard.entity.MeasurementUnitEntity">
 insert into tb_measurement_unit(strUnitId,strUnitName,strUnitDesc,strReserved)
 values(#{strUnitId},#{strUnitName},#{strUnitDesc},#{strReserved})
</insert>

<!-- 删除单条计量记录 -->
<delete id="delMeasurementUnitById" parameterType="string">
delete from tb_measurement_unit where strUnitId=#{strUnitId}
</delete>

<!-- 更新一条计量记录 -->
<update id="updateMeasurementUnit" parameterType="com.ecard.entity.MeasurementUnitEntity">
update tb_measurement_unit set strUnitName=#{strUnitName},strUnitDesc=#{strUnitDesc},strReserved=#{strReserved}
 where strUnitId=#{strUnitId}
</update>

<!-- 获取单条计量记录 -->
<select id="getMeasurementUnitById" parameterType="string" resultType="com.ecard.entity.MeasurementUnitEntity">
select strUnitId,strUnitName,strUnitDesc,strReserved from tb_measurement_unit where 
strUnitId=#{strUnitId} limit 0,1
</select>

<!-- 分页获取计量记录 -->
<select id="getMeasurementUnitList" parameterType="map" resultType="com.ecard.entity.MeasurementUnitEntity">
select strUnitId,strUnitName,strUnitDesc,strReserved from tb_measurement_unit 
limit #{pageFrom},#{pageSize}
</select>


	<!-- 查询计量单位记录总数量-->
	<select id="getMeasurementUnitTotalCount" parameterType="map" resultType="int">
	     SELECT COUNT(strUnitId)
      	 FROM tb_measurement_unit
	</select>
	
	
	
<!-- 新增一条tb_goods_type记录 -->
<insert id="insertGoodsTypeConfigEntity" parameterType="com.ecard.entity.GoodsTypeConfigEntity">
insert into tb_goods_type(strGoodsTypeId,strGoodsTypeName,strGoodsTypeDesc,strReserved)
 values(#{strGoodsTypeId},#{strGoodsTypeName},#{strGoodsTypeDesc},#{strReserved})</insert>

<!-- 删除单条tb_goods_type记录 -->
<delete id="deleteGoodsTypeConfigEntity" parameterType="string">
delete from tb_goods_type where strGoodsTypeId=#{strGoodsTypeId}
</delete>

<!-- 更新tb_goods_type记录 -->
<update id="updateGoodsTypeConfigEntity" parameterType="com.ecard.entity.GoodsTypeConfigEntity">
update tb_goods_type set strGoodsTypeName=#{strGoodsTypeName},strGoodsTypeDesc=#{strGoodsTypeDesc},strReserved=#{strReserved}
 where strGoodsTypeId=#{strGoodsTypeId}
</update>

<!-- 获取单条记录 -->
<select id="getGoodsTypeConfigEntity" parameterType="string" resultType="com.ecard.entity.GoodsTypeConfigEntity">
select strGoodsTypeId,strGoodsTypeName,strGoodsTypeDesc,strReserved from tb_goods_type where 
strGoodsTypeId=#{strGoodsTypeId}
</select>

<!-- 分页获取记录 -->
<select id="getListGoodsTypeConfigEntity" parameterType="map" resultType="com.ecard.entity.GoodsTypeConfigEntity">
select strGoodsTypeId,strGoodsTypeName,strGoodsTypeDesc,strReserved from tb_goods_type 
limit #{pageFrom},#{pageSize}
</select>

	<!-- 查询计量单位记录总数量-->
	<select id="getGoodsTypeTotalCount" parameterType="map" resultType="int">
	     SELECT COUNT(strGoodsTypeId)
      	 FROM tb_goods_type
	</select>
</mapper>